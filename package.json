{
  "name": "hydra-mini-gui",
  "version": "1.0.0",
  "description": "create a mini gui for hydra-synth",
  "license": "ISC",
  "author": "Milan Gress",
  "type": "module",
  "main": "dist/hydra-mini-gui.js",
  "scripts": {
    "dev": "bun run build:watch & bun run --watch server.js",
    "start": "bun run build && bun run server.js",
    "build": "bun build ./src/index.js --outfile=dist/hydra-mini-gui.js",
    "build:watch": "bun build ./src/index.js --outfile=dist/hydra-mini-gui.js --watch",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage"
  },
  "keywords": [
    "hydra",
    "hydra-synth",
    "gui",
    "controls",
    "live-coding"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/hydra-mini-gui"
  },
  "dependencies": {
    "acorn": "^8.11.3",
    "astravel": "^0.5.0",
    "astring": "^1.8.6",
    "tweakpane": "^4.0.5"
  },
  "devDependencies": {
    "bun-types": "latest",
    "happy-dom": "^17.0.2"
  }
}
